<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">?android:attr/colorForegroundInverse</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/holo_blue_dark</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_blue_dark</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">?attr/colorControlNormal</item>
    </style>

</resources>
