<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="dreamteam.smartcart.ItemListScreen">


    <TextView
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click On An Item for More Info."
        android:textStyle="italic"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/text_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:background="@drawable/text_border"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/text_border"
            android:layout_centerVertical="true"
            />


    </LinearLayout>






    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:entries="@color/colorPrimary"
        android:id="@+id/lvSearch"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/fragsearch"
        android:layout_below="@+id/lvSearch">

    </FrameLayout>


</RelativeLayout>


