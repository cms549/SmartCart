<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="dreamteam.smartcart.MyShoppingListScreen">

    <TextView
        android:text="My Shopping List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView4" />
    <TextView
        android:text="Hold an Item to Remove it from the List."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:id="@+id/textView6" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:background="@drawable/button_border"
        android:id="@+id/lvSL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/etSL" />
    <Button
        android:text="Add Item to List"
        android:onClick="addItemToList"
        android:background="@drawable/button_border"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="Enter Item..."
        android:textColorHint="@android:color/black"
        android:ems="10"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:id="@+id/etSL"
        android:layout_alignParentEnd="true" />
</RelativeLayout>